{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "title": "Partner Order Input",
  "type": "object",
  "required": ["externalId", "orderStatus", "locationCode", "shipmentType", "productCategory", "orderItems"],
  "properties": {
    "externalId": {
      "type": "string",
      "minLength": 1,
      "maxLength": 255,
      "description": "Partner's unique order identifier"
    },
    "orderStatus": {
      "type": "string",
      "enum": ["OPEN"]
    },
    "locationCode": {
      "type": "string",
      "minLength": 1,
      "maxLength": 255
    },
    "createDate": {
      "type": "string",
      "pattern": "^(\\d{4}-\\d{2}-\\d{2} \\d{2}:\\d{2}:\\d{2})$"
    },
    "shipmentType": {
      "type": "string",
      "enum": ["CUSTOMER"]
    },
    "deliveryType": {
      "type": "string",
      "enum": ["DATE_TIME", "SCHEDULED", "STAT", "ROUTINE", "ASAP"]
    },
    "productCategory": {
      "type": "string",
      "minLength": 1
    },
    "orderItems": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["productFamily", "bloodType", "quantity"],
        "properties": {
          "productFamily": {
            "type": "string",
            "examples": ["RED_BLOOD_CELLS_LEUKOREDUCED", "PLASMA_TRANSFUSABLE"]
          },
          "bloodType": {
            "type": "string",
            "minLength": 1
          },
          "quantity": {
            "type": "integer",
            "minimum": 1
          },
          "comments": {
            "type": "string"
          }
        }
      }
    }
  }
}