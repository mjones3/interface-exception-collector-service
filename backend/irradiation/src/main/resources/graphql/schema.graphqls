type Query {
    validateDevice(deviceId: String!, location: String!): DeviceValidationResult
    validateUnit(unitNumber: String!, location: String!): [Inventory]
    readConfiguration(keys: [String]): [ConfigurationDTO]
}

type DeviceValidationResult {
    valid: Boolean!
    errorMessage: String
}

type Inventory {
    unitNumber: String
    productCode: String
    location: String
    status: String
}

type  ConfigurationDTO {
    key: String,
    value: String
}
