    bloodType: String!
    quantity: Int!
    comments: String
    createDate: DateTime!
    modificationDate: DateTime!
    quantityAvailable:Int
    quantityShipped:Int!
    quantityRemaining:Int!
}

type OrderResponseDTO {
    notifications:[NotificationDTO]
    data:Order
}

type Order {
