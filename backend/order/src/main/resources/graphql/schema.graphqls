    willCallPickup: Boolean
    phoneNumber: String
    productCategory: String!
    comments: String
    status: String!
    priority: String!
    createEmployeeId: String
    createDate: DateTime!
    modificationDate: DateTime!
    deleteDate: DateTime
    orderItems: [OrderItem]!
    totalShipped: Int!
    totalRemaining: Int!
