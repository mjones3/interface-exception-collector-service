{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "title": "Cancel Order inbound",
  "description": "Cancel customer order",
  "type": "object",
  "properties": {
    "externalId": {
      "$ref": "#/definitions/externalId"
    },
    "cancelDate": {
      "$ref": "#/definitions/dateTimePattern"
    },
    "cancelReason": {
      "type": "string",
      "title": "Cancellation Reason",
      "minLength": 1,
      "maxLength": 250
    },
    "cancelEmployeeCode": {
      "type":["null","string"],
      "title": "Cancel Employee Code",
      "maxLength": 50
    }

  },
  "required": [
    "externalId",
    "cancelDate",
    "cancelReason"
  ],
  "additionalProperties": false,
  "definitions": {
    "externalId": {
      "type": "string",
      "title": "ExternalId of the order",
      "minLength": 1,
      "maxLength": 50,
      "examples": [
        "11411792"
      ]
    },
    "dateTimePattern": {
      "type": "string",
      "pattern": "^(\\d{4}-\\d{2}-\\d{2} \\d{2}:\\d{2}:\\d{2})$"
    }
  }
}
