{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "eventId": {
      "type": "string"
    },
    "occurredOn": {
      "type": "string"
    },
    "eventVersion": {
      "type": "string"
    },
    "eventType": {
      "type": "string"
    },
    "payload": {
      "type": "object",
      "properties": {
        "externalId": {
          "type": "string"
        },
        "rejectedReason": {
          "type": "string"
        },
        "operation": {
          "type": "string"
        },
        "transactionId": {
          "type": ["null","string"]
        }
      },
      "required": [
        "externalId",
        "rejectedReason",
        "operation"
      ]
    }
  },
  "required": [
    "eventId",
    "occurredOn",
    "payload",
    "eventType",
    "eventVersion"
  ]
}